<!DOCTYPE html>
<html lang="en">
<head>
    <!-- META SECTION -->
    <title><%= current_site.the_title %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- END META SECTION -->

    <%= stylesheet_link_tag theme_asset_path("css/main") %>
    <%= raw the_head %>
</head>
<body data-spy="scroll" data-offset="80">
 <%= render partial: "partials/header" %>

 <!-- ./header -->
 <% # Home banner section %>
 <%= render partial: "partials/homepage/home_banner" %>

 <!-- Main Content -->
 <div class="main-content">
   <%= yield %>

 </div>
 <!-- Main Content END -->
 <%= render partial: "partials/footer"%>
 <%= render partial: "partials/callback_form"%>

 <script>
   var theme_utils_path = '<%= javascript_path theme_asset_path ("js/utils.js") %>';
 </script>

 <%= javascript_include_tag theme_asset_path("js/main.js") %>
</body>
</html>
